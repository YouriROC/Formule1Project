@model F1Lib.Models.Driver

@{
    ViewData["Title"] = Model.Name.ToString();
}

<div>

    @if (Model.ImageUrl != null)
                    {
                        <img src="@Model.ImageUrl" height="140"/>
                    }
                    else
                    {
                        <img src="https://cdn-icons-png.flaticon.com/512/37/37943.png" height="140"/>
                    }
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Geboortedatum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birthdate)
        </dd>
        <dt class = "col-sm-2">
			Nationaliteit:
        </dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Country.CountryCode) -
            @Html.DisplayFor(model => model.Country.CountryName)
		</dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Wiki)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Wiki)
        </dd>
        <dt class = "col-sm-10">
			Overwinningen:
        </dt>
		<dd class="col-sm-9">
            @Model.Races.Count()
		</dd>
        <dt class = "col-sm-10">
			Eerste overwinning:
        </dt>
		<dd class="col-sm-9">
            @Model.Races.First().Date
		</dd>
		<dt class = "col-sm-10">
			Laatste overwinning:
        </dt>
		<dd class="col-sm-9">
            @Model.Races.Last().Date
		</dd>
        <dt class="col-sm-10">
			Teams:
        </dt>
		<dd class = "col-sm-9">
			@Model.Races.Last().Team.Name
        </dd>
		
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@model F1Lib.Models.Circuit


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Circuit</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <img src="~/images/circuits/@(Model.Name).png" height = "300"  />
        </dt>
        <dd>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country.CountryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country.CountryCode) - @Html.DisplayFor(model => model.Country.CountryName)
            <img src="~/images/flags/@(Model.Country.CountryCode).png"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)/@Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Latitude), @Html.DisplayFor(model => model.Longitude)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Wiki)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Wiki)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Races)
        </dt>
        <dd class = "col-sm-10">
            @Model.Races.Count()
        </dd>
        <dt class = "col-sm-2">
            Aantal winnaars
        </dt>
        <dd class = "col-sm-10">
            @Model.Races.First().Driver.Name
        </dd>
        <dt class = "col-sm-2">
            3 succesvolste coureurs
        </dt>
        <dd class = "col-sm-10">
            @Model.Races.Last().Driver.Name
        </dd>
        <dt class = "col-sm-2">
            3 succesvolste teams
        </dt>
        <dd class = "col-sm-10">
            @Model.Races.Last().Team.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
